<center>
    <h1>Contact Page</h1>
</center>

<div class="row">
  <div class="col-sm-offset-2 col-sm-10">
    {{#if responseMessage}}
      <div class="alert alert-success">{{responseMessage}}</div>
    {{/if}}
  </div>

</div>


<form class="form-horizontal">
  <div class="form-group {{if validEmail "has-success has-feedback"}} ">
    <label for="inputEmail" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
      {{#if validEmail}}
      <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
      <span id="inputSuccess2Status" class="sr-only">(success)</span>
      {{/if}}
    </div>
  </div>
  <div class="form-group {{if validMessage "has-success has-feedback"}}">
    <label for="inputPassword" class="col-sm-2 control-label">Message</label>
    <div class="col-sm-10">
      {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=message}}
      {{#if validMessage}}
      <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
      <span id="inputSuccess2Status" class="sr-only">(success)</span>
      {{/if}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary btn-lg" disabled={{isDisabled}} {{action 'saveMessage'}}>Send Message</button>
    </div>
  </div>
</form>
